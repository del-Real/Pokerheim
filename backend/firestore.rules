rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Deny all write access
    match /tables/{tableId} {
      allow write: if false;
      allow read: if true;

      match /players/{playerId} {
        allow write: if false;
        allow read: if true;
      }

      match /private {
        allow read: if false;
      }
    }

    match /players/{playerId} {
      allow write: if false;
      allow read: if true;
    }
  }
}
